export flight_ENV_orig_PS1="$PS1"

export flight_ENV_active=<%= env_name %>
export flight_ENV_scope=<%= env_global ? 'global' : 'user' %>
export flight_ENV_dir=<%= env_root %>/<%= env_name %>

if [ -d "${flight_ENV_dir}"/env-meta/plugins ]; then
  for a in "${flight_ENV_dir}"/env-meta/plugins/*/activate.bashrc; do
    if [ -r "$a" ]; then
      source $a
    fi
  done
  unset a
fi

if [ "$flight_ENV_prompt" != "off" ]; then
  if [[ $TERM == "xterm-256color" ]]; then
    PS1="\[\033[48;5;25;1;38;5;189m\]<<%= env_name %><%= env_global ? '\[\033[1;38;5;219m\]{+}\[\033[1;38;5;189m\]' : '' %>>\[\033[0m\] $PS1"
  else
    PS1="\[\033[1m\]<<%= env_name %><%= env_global ? '\[\033[7m\]{+}\[\033[0;1m\]' : '' %>>\[\033[0m\] $PS1"
  fi
fi
