set flight_ENV_ROOT "%ENV_ROOT%"
set flight_ENV_orig_prompt = "$prompt"

setenv flight_ENV_active <%= env_name %>
setenv flight_ENV_scope <%= env_global ? 'global' : 'user' %>
setenv flight_ENV_dir <%= env_root %>/<%= env_name %>

if ( -d $flight_ENV_dir/env-meta/plugins ) then
  set nonomatch
  foreach i ( $flight_ENV_dir/env-meta/plugins/*/activate.tcshrc )
    if ( -r "$i" ) then
      source "$i"
    endif
  end
  unset i nonomatch
endif
unset flight_ENV_ROOT

if ( ! $?flight_ENV_prompt ) then
  set flight_ENV_prompt
endif

if ( $flight_ENV_prompt != "off" ) then
  set bold='%{\033[1m%}'
  set reverse='%{\033[7m%}'
  set reset='%{\033[0;1m%}'
  set clr='%{\033[0m%}'
  set prompt="$bold<<%= env_name %><%= env_global ? '$reverse{+}$reset' : '' %>>$clr $prompt"
  unset bold reverse reset clr
endif
